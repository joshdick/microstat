{
  "name": "microstat",
  "version": "1.0.0",
  "description": "A Micropub endpoint for statically-generated microblogs.",
  "author": "Josh Dick <josh@joshdick.net>",
  "license": "MIT",
  "keywords": [
    "markdown",
    "microblog",
    "micro.blog",
    "micropub",
    "static"
  ],
  "engines": {
    "node": ">= 12.0.0"
  },
  "main": "dist/microstat.js",
  "scripts": {
    "build": "tsc",
    "lint": "eslint 'src/**/*.{j,t}s' && prettier --check 'src/**/*.{js,ts,json,md}' '*.{json,md}'",
    "lint:fix": "eslint --fix 'src/**/*.{j,t}s' && prettier --write 'src/**/*.{js,ts,json,md}' '*.{json,md}'",
    "start": "yarn build && node dist/microstat.js",
    "start:dev": "tsc-watch --onSuccess 'node dist/microstat.js'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "axios": "^1.1.3",
    "config": "^3.3.8",
    "express": "4.18.2",
    "format-microformat": "0.11.1",
    "micropub-express": "0.9.1",
    "minilog": "3.1.0",
    "mkdirp": "1.0.4",
    "moment": "2.29.4",
    "send-webmention": "2.0.0"
  },
  "devDependencies": {
    "@types/minilog": "^2.0.29",
    "@types/mkdirp": "^1.0.2",
    "@typescript-eslint/eslint-plugin": "^5.40.1",
    "@typescript-eslint/parser": "^5.40.1",
    "eslint": "^8.25.0",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.3",
    "prettier": "^2.7.1",
    "tsc-watch": "^5.0.3",
    "typescript": "^4.8.4"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshdick/microstat.git"
  },
  "eslintConfig": {
    "root": true,
    "parser": "@typescript-eslint/parser",
    "plugins": [
      "@typescript-eslint"
    ],
    "extends": [
      "eslint:recommended",
      "plugin:@typescript-eslint/eslint-recommended",
      "plugin:@typescript-eslint/recommended"
    ],
    "ignorePatterns": [
      "dist/",
      "node_modules/"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged && yarn check --integrity"
    }
  },
  "lint-staged": {
    "src/**/*.{js,ts,json,md}": [
      "prettier --check"
    ],
    "./*.{json,md}": [
      "prettier --check"
    ],
    "src/**/*.{j,t}s": [
      "eslint"
    ]
  }
}
