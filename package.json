{
  "name": "microstat",
  "version": "1.0.0",
  "description": "A Micropub endpoint for statically-generated microblogs.",
  "author": "Josh Dick <josh@joshdick.net>",
  "license": "MIT",
  "keywords": [
    "markdown",
    "microblog",
    "micro.blog",
    "micropub",
    "static"
  ],
  "main": "index.js",
  "scripts": {
    "lint": "eslint index.js",
    "start": "node index.js",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "dependencies": {
    "dotenv": "8.2.0",
    "express": "4.17.1",
    "format-microformat": "0.11.1",
    "micropub-express": "0.8.0",
    "minilog": "3.1.0",
    "mkdirp": "1.0.3",
    "moment": "2.24.0",
    "request": "2.88.0",
    "send-webmention": "2.0.0"
  },
  "devDependencies": {
    "eslint": "^6.5.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/joshdick/microstat.git"
  },
  "eslintConfig": {
    "extends": "eslint:recommended",
    "parserOptions": {
      "ecmaVersion": 8
    },
    "env": {
      "es6": true,
      "node": true
    },
    "rules": {
      "no-console": "off",
      "semi": [
        "error",
        "always"
      ],
      "indent": [
        "error",
        "tab"
      ]
    }
  }
}
